<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExploreFragment">



        <!--1st post-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/post_profile_pic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/profile_pic_flower" />

        <TextView
            android:id="@+id/post_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/post_profile_pic"
            android:text="jackie.an" />

        <ImageView
            android:id="@+id/post_image"
            android:layout_width="@dimen/post_pic_size"
            android:layout_height="@dimen/post_pic_size"
            android:layout_below="@id/post_profile_pic"
            app:srcCompat="@drawable/shirt_post_1" />


        <ImageButton
            android:id="@+id/profile_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/post_image"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="5dp"
            android:backgroundTint="@color/Transparent"
            android:scaleX="1.6"
            android:scaleY="1.6"
            app:srcCompat="@drawable/heart_icon" />

        <TextView
            android:id="@+id/like_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/post_image"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/heart_btn"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/heart_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/post_image"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@id/profile_btn"
            android:backgroundTint="@color/Transparent"
            android:scaleX="2.1"
            android:scaleY="2.1"
            android:tint="@color/Black"
            app:srcCompat="@drawable/dislike" />

        <TextView
            android:id="@+id/like_num_tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/post_image"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/heart_btn"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_btn"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="37dp"
            android:text="Yellow, black plaid shirt"
            android:textSize="18sp" />


        <ImageButton
            android:id="@+id/text_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/post_image"
            android:layout_marginLeft="310dp"
            android:layout_marginTop="19dp"
            android:layout_marginBottom="5dp"
            android:background="@color/Transparent"
            android:scaleX="2.1"
            android:scaleY="2.1"
            app:srcCompat="@drawable/chat_icon" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/desc"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="1dp"
            android:background="@color/Grey"
            android:text="#yellow" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/desc"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@id/textView3"
            android:background="@color/Grey"
            android:text="#black" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/desc"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@id/textView4"
            android:background="@color/Grey"
            android:text="#plaid" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/desc"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@id/textView5"
            android:background="@color/Grey"
            android:text="#jacket" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/desc"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@id/textView6"
            android:background="@color/Grey"
            android:text="#shirt" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/desc"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@id/textView7"
            android:background="@color/Grey"
            android:text="#trendy" />




    </RelativeLayout>
    <!--end 1st post-->


</FrameLayout>