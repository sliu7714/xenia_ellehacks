<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MessageFragment">

    <TextView
        android:id="@+id/ChatTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/LightGrey"
        android:elevation="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="emma28foster"
        android:textAlignment="center"
        android:textColor="@color/Black"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="5dp"
        android:ems="10"
        android:hint="Message"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />


    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/editText2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ChatTitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You are now chatting with emma"
                android:textAlignment="center"
                android:layout_marginTop="150dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="180dp"
                    android:scaleX="4"
                    android:scaleY="2"
                    android:src="@drawable/chatbox" />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-100dp"
                    android:layout_marginTop="35dp"
                    android:scaleX="2"
                    android:scaleY="2"
                    android:textSize="10dp"
                    android:text="is that jacket still available? I love the style!" />
                <ImageButton
                    android:id="@+id/user_profile_btn"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="90dp"
                    android:paddingLeft="5dp"
                    android:background="@color/Transparent"
                    android:scaleX="1"
                    android:scaleY="1"
                    android:src="@drawable/profile_pic_face_1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/heart_btn"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="80dp"
                    android:layout_marginRight="50dp"
                    android:paddingLeft="25dp"
                    android:background="@color/Transparent"
                    android:scaleX="1"
                    android:scaleY="1"
                    android:src="@drawable/profile_pic_flower" />

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="30dp"
                    android:scaleX="7"
                    android:scaleY="3"
                    android:src="@drawable/chatbox" />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-20dp"
                    android:layout_marginTop="38dp"
                    android:scaleX="2"
                    android:scaleY="2"
                    android:textSize="10sp"
                    android:text="Yup it's available! " />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>